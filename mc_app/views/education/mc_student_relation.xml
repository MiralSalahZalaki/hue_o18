<odoo>
    <data>
        <record id="student_relation_tree_view" model="ir.ui.view">
            <field name="name">student_relation_tree_view</field>
            <field name="model">mc.student.relation</field>
             <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>


            <record id="student_relation_form_view" model="ir.ui.view">
            <field name="name">student_relation_form_view</field>
            <field name="model">mc.student.relation</field>
             <field name="arch" type="xml">
                <form>
                    <field name="name"/>
                </form>
            </field>
        </record>


        
        <record id="action_student_relation" model="ir.actions.act_window">
            <field name="name">Student Relations</field>
            <field name="res_model">mc.student.relation</field>
            <field name="view_mode">list,form</field>
        </record>



        <menuitem id="menu_student_relation"
                name="Student Relations" 
                parent="menu_application_admission_setup"
                action="action_student_relation"/>

    </data>
</odoo>
