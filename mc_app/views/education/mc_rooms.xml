<odoo>
    <data>
        <record id="mc_rooms_tree_view" model="ir.ui.view">
            <field name="name">mc_rooms_tree_view</field>
            <field name="model">mc.rooms</field>
             <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="company_id"/>
                    <field name="capacity"/>
                    <field name="period_type"/>
                </list>
            </field>
        </record>


        <record id="mc_rooms_form_view" model="ir.ui.view">
            <field name="name">mc_rooms_form_view</field>
            <field name="model">mc.rooms</field>
             <field name="arch" type="xml">
                <form>
                   <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                        <field name="capacity"/>
                        <field name="period_type" widget="radio"/>
                    </group>
                   </sheet>
                </form>
            </field>
        </record>


        
        <record id="action_mc_rooms" model="ir.actions.act_window">
            <field name="name">Rooms</field>
            <field name="res_model">mc.rooms</field>
            <field name="view_mode">list,form</field>
        </record>



        <menuitem id="menu_mc_rooms"
                name="Rooms" 
                parent="menu_application_class_setup"
                action="action_mc_rooms"/>

    </data>
</odoo>
