<odoo>
    <data>
        <record id="mc_syllabus_per_class_tree_view" model="ir.ui.view">
            <field name="name">mc_syllabus_per_class_tree_view</field>
            <field name="model">mc.syllabus.per.class</field>
             <field name="arch" type="xml">
                <list>
                    <field name="syllabus_id" readonly="1" can_create="true" can_write="true" />
                    <field name="class_division_id" readonly="1" can_create="true" can_write="true" />
                    <field name="faculty_phone"/>
                    <field name="time_from" widget="float_time"/>
                    <field name="time_to" widget="float_time"/>
                    <field name="link"/>
                    <field name="room_regular_id" readonly="1" invisible="1" can_create="true" can_write="true"  column_invisible="1"/>
                    <field name="faculty_regular_id" readonly="1" invisible="1" can_create="true" can_write="true" column_invisible="1"/>
                    <field name="room_special_id" readonly="1" invisible="1" can_create="true" can_write="true" column_invisible="1"/>
                    <field name="faculty_special_id" readonly="1" invisible="1" can_create="true" can_write="true" column_invisible="1"/>
                    <field name="regular" invisible="1" readonly="1" column_invisible="1"/>
                    <field name="special" invisible="1" readonly="1" column_invisible="1"/>
                </list>
            </field>
        </record>


            <record id="mc_syllabus_per_class_form_view" model="ir.ui.view">
            <field name="name">mc_syllabus_per_class_form_view</field>
            <field name="model">mc.syllabus.per.class</field>
             <field name="arch" type="xml">
                <form>
                   <sheet>
                   <group>
                        <field name="syllabus_id"/>
                        <field name="company_id" readonly="1"/>
                        <field name="class_division_id"/>
                        <field name="division" invisible="1"/>
                        <field name="mc_standard_class_id" string="Standard Class Record" invisible="1"/>
                        <field name="class_id" invisible="1"/>
                        <field name="elective"/>
                        <field name="faculty_phone"/>
                        <field name="time_from"/>
                        <field name="time_to"/>
                        <field name="link"/>
                        <field name="team_id_sds"/>
                        <field name="enrollment_per_class_ids"/>
                    </group>
                   </sheet>
                </form>
            </field>
        </record>

        <record id="view_syllabus_per_class_search" model="ir.ui.view">
            <field name="name">syllabus.per.class.search</field>
            <field name="model">mc.syllabus.per.class</field>
            <field name="arch" type="xml">
                <search>
                    <filter string="Syllabus" name="group_by_syllabus" domain="[]" context="{'group_by': 'syllabus_id'}"/>
                </search>
            </field>
        </record>

        
        <record id="action_mc_syllabus_per_class" model="ir.actions.act_window">
            <field name="name">Syllabus Per Class</field>
            <field name="res_model">mc.syllabus.per.class</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_group_by_syllabus': 1}</field>
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        </record>



        <menuitem id="menu_mc_syllabus_per_class"
                name="Syllabus Per Class" 
                parent="education_core.menu_education_class_conf"
                action="action_mc_syllabus_per_class"/>

        <menuitem
            id="menu_mc_syllabus_per_class_from_timtable"
            name="Syllabus Per Class"
            parent="education_time_table.education_time_table_sub_menu"
            action="action_mc_syllabus_per_class"/>

    </data>
</odoo>
