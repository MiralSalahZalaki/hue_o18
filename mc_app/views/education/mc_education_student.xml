<odoo>
    <data>
        <record id="mc_education_student_form_inherit" model="ir.ui.view">
            <field name="name">education.student.form.inherit</field>
            <field name="model">education.student</field>
            <field name="inherit_id" ref="education_core.education_student_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/*[1]" position="before">
                    <widget name="web_ribbon" title="Done" bg_color="text-bg-success" invisible="state != 'done'"/>
                </xpath>
                <xpath expr="//h1" position="inside">
                    <div>
                        <label for="full_english_name">English Full Name:</label>
                        <field name="full_english_name" required="1" placeholder="Enter full English name"/>
                    </div>
                    <div>
                        <label for="full_arabic_name">Arabic Full Name:</label>
                        <field name="full_arabic_name" placeholder="Enter full Arabic name" required="1"/>
                    </div>
                    <div>
                        <label for="student_code">Student Code:</label>
                        <field name="student_code" readonly="1" required="1"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='class_division_id']" position="before">
                    <field name="partner_id" required="1"/>
                    <field name="admission_class_id" required="1"/>
                    <field name="grade_id" required="1"/>
                    <field name="academic_year_id" required="1"/>
                    <field name="need_transportation_facility"/>
                </xpath>
                <xpath expr="//field[@name='medium_id']" position="after">
                    <field name="application_id" required="1"/>
                    <field name="result_block_reason"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="domain">[('id', 'in', allowed_company_ids)]</attribute>
                </xpath>
                <xpath expr="//field[@name='gender']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//field[@name='date_of_birth']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//notebook/page[1]/group[2]/group[1]" position="inside">
                    <field name="student_national_id" readonly="1" required="1" />
                    <field name="place_of_birth" readonly="1"/>
                    <field name="age_next_oct"/>
                    <field name="religion_id" required="1"/>
                    <field name="birth_certificate_number"/>
                    <field name="internal_student"/>
                    <field name="elective_syllabus_id" invisible="1"/>
                </xpath>
                <xpath expr="//notebook/page[1]" position="inside">
                    <group name='father_info' string="Father's Personal Details">
                        <group>
                            <field name='father_name' placeholder='Type father name' required="1"/>
                            <field name='father_national_id' placeholder='Type father national ID' required="1"/>
                            <field name='father_id' readonly="1" required="1"/>
                            <field name='father_birthdate'/>
                            <field name='father_governorate'/>
                            <field name='father_educational_qualifications' placeholder='Type Qualifications'/>
                        </group>
                        <group>
                            <field name='father_profession' placeholder='Type father profession'/>
                            <field name='father_mobile' placeholder='Type phone number' widget='phone' required="1"/>
                            <field name='father_email' placholder='example@domain.com' widget='email'/>
                            <field name='father_english_level' placeholder="Select English level"/>
                            <field name="father_status" required="1"/>
                            <field name="father_religion"/>
                        </group>
                    </group>
                    <group name='mother_info' string="Mother's Personal Details">
                        <group>
                            <field name='mother_name' placeholder='Type mother name' required="1"/>
                            <field name='mother_national_id' placeholder='Type mother national ID' required="1" />
                            <field name='mother_id' readonly="1"/>
                            <field name='mother_birthdate'/>
                            <field name='mother_governorate'/>
                            <field name='mother_profession' placeholder='Type mother profession'/>
                        </group>
                        <group>
                            <field name='mother_educational_qualifications' placeholder='Type Qualifications'/>
                            <field name='mother_mobile'  placeholder='Type phone number' widget='phone' required="1"/>
                            <field name='mother_email' placholder='example@domain.com' widget='email'/>
                            <field name='mother_english_level' placeholder="Select English level"/>
                            <field name="mother_status"/>
                            <field name="mother_religion"/>
                        </group>
                    </group>
                    <group name='guardian' string="Guardian Details">
                        <group>
                            <field name='parent_status' placeholder='Select Parent Status' required="1"/>
                            <field name='relation_to_student' placeholder='Relation To Student' />
                            <field name='guardian' placeholder='Type Guardian Name'/>
                            <field name='guardian_national_id' placeholder='Type Guardian Name' required="1"/>
                            <field name='reason_of_guardian' placeholder='Reason Of Guardian'/>
                        </group>
                        <group>
                            <field name='guardian_profession' placeholder='Job Of Guardian'/>
                            <field name='emergency_mobile'  placeholder='Type phone number' widget='phone'/>
                            <field name='detailed_address' placholder='Detailed Address' />
                            <field name='guardian_note' placeholder="Note"/>
                        </group>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[2]/group[1]/group[1]/field[@name='email']" position="before">
                    <field name="login_email" />
                    <field name="password"/>
                    <field name="seat_number"/>
                </xpath>
                <xpath expr="//notebook/page[2]/group[2]" position="after">
                    <group string="Parent Contact Details">
                        <field name = "father_mobile" widget="phone"/>
                        <field name = "father_email"  widget="email"/>
                        <field name = "mother_mobile" widget="phone"/>
                        <field name = "mother_email"  widget="email"/>
                        <field name = "emergency_mobile" widget="phone"/>
                    </group>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Sibling Details">
                        <group>
                            <field name="siblings_ids" domain="[('id', '!=', id)]"/>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="MC Info">
                        <group>
                            <field name="partner_id" string="Related User" required="1"/>
                            <field name="father_id" string="Father User" required="1"/>
                            <field name="mother_id" string="Mother User" required="1"/>
                            <field name="guardian_id" string="Guardian User"/>
                            <field name="ldap_object" string="Ldap Object"/>
                            <field name="ms_azure_graph_id" string="MS Azure Graph ID"/>
                            <field name="student_code" string="Student Code" readonly="1"/>
                            <field name="ministry_code" string="Ministry Code"/>
                            <field name="enrollment_date" string="Enrollment Date"/>
                            <field name="entrance_year" string="Entrance Year"/>
                            <field name="join_bus" string="Join Bus"/>
                            <field name="bus_city"  invisible= "join_bus == False"  string="Bus City"/>
                            <field name="founder_son" string="Founder Son"/>
                            <field name="founder_son_level" invisible="founder_son == False"/>
                            <field name="worker_son"/>
                            <field name="worker_son_level" invisible="worker_son == False"/>
                            <field name="prev_school_id" string="Prev School ID"/>
                            <field name="prev_school_type" string="Prev School Type"/>
                            <field name="first_school" string="Financial First School Student First School"/>
                            <field name="student_first_school" string="Student First School"/>
                            <field name="elem_school" string="Elementary certificate school"/>
                            <field name="prep_school" string=" Preparatory certificate school"/>
                            <field name="old_student_year" string="Old Entrance Year"/>
                            <field name="student_status" string="Student Status"/>
                            <field name="ministry_subject_exempted" string="Ministry Subject Exempted"/>
                            <field name="student_first_year" string="Student First Year"/>
                        </group>
                    </page>
                    <page string="Financial Notes">
                        <group>
                            <field name="myschool_fees"/>
                            <field name="allow_features"/>
                            <field name="unpaid_invoices" reaadonly="1"/>
                            <field name="financial_note"/>
                        </group>
                    </page>
                </xpath>
                <!-- Remove Fields  -->
                <xpath expr="//field[@name='father_name']" position="replace"/>
                <xpath expr="//field[@name='mother_name']" position="replace"/>
                <xpath expr="//field[@name='caste']" position="replace"/>
                <xpath expr="//field[@name='guardian_id']" position="replace"/>
                <xpath expr="//field[@name='religion']" position="replace"/>
                <!-- NO QUICK OPEN Fields  -->
                <xpath expr="//field[@name='academic_year_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='grade_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='class_division_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='medium_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='prev_school_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='religion_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='relation_to_student']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='entrance_year']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='application_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='admission_class_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='sec_lang_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='father_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='mother_id']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='prev_school_type']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='old_student_year']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='student_first_year']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='prep_school']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <xpath expr="//field[@name='elem_school']" position="attributes">
                    <attribute name="options">{'no_create': True}</attribute>
                    <attribute name="widget">selection</attribute>
                </xpath>
                <!-- Invisible Fields  -->
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='middle_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='last_name']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
        <record id="mc_education_student_list_inherit" model="ir.ui.view">
            <field name="name">education.student.list.inherit</field>
            <field name="model">education.student</field>
            <field name="inherit_id" ref="education_core.education_student_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='ad_no']" position="after">
                    <field name = 'seat_number'/>
                    <field name = 'prev_school_id'/>
                    <field name = 'full_english_name'/>
                    <field name = 'student_code'/>
                    <field name = 'class_division_id'/>
                    <field name = 'admission_class_id'/>
                    <field name = 'company_id'/>
                </xpath>
                <xpath expr="//list/field[@name='name']" position="replace"/>
                <xpath expr="//list/field[@name='last_name']" position="replace"/>
                <xpath expr="//list/field[@name='date_of_birth']" position="replace"/>
                <xpath expr="//list/field[@name='email']" position="replace"/>
                <xpath expr="//list/field[@name='phone']" position="replace"/>
                <xpath expr="//list/field[@name='blood_group']" position="replace"/>
            </field>
        </record>
        <record id="education_core.education_student_action" model="ir.actions.act_window">
            <field name="context">{'create': False}</field>
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>
        </record>
    </data>
</odoo>