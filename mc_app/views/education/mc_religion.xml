<odoo>
    <data>
        <record id="religion_tree_view" model="ir.ui.view">
            <field name="name">religion_tree_view</field>
            <field name="model">mc.religion</field>
             <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                </list>
            </field>
        </record>


        <record id="religion_form_view" model="ir.ui.view">
            <field name="name">religion_form_view</field>
            <field name="model">mc.religion</field>
             <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field string="Name" name="name"/>
                            <field string="Arabic Name" name="arabic_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        
        <record id="action_religion" model="ir.actions.act_window">
            <field name="name">Religion</field>
            <field name="res_model">mc.religion</field>
            <field name="view_mode">list,form</field>
        </record>



        <menuitem id="menu_religion"
                name="Religion" 
                parent="menu_application_admission_setup"
                action="action_religion"/>

    </data>
</odoo>
