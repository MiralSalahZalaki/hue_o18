<odoo>
    <record id="mc_bus_city_list_view" model="ir.ui.view">
        <field name="name">bus.fee.list</field>
        <field name="model">mc.bus.city</field>
        <field name="arch" type="xml">
            <list string="Bus Fee">
                <field name="name"/>
                <field name="fee_amount"/>
                <field name="currency_id"/>
            </list>
        </field>
    </record>


    <record id="mc_bus_city_form_view" model="ir.ui.view">
        <field name="name">bus.fee.form</field>
        <field name="model">mc.bus.city</field>
        <field name="arch" type="xml">
            <form string="Bus Fee">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fee_amount"/>
                        <field name="currency_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

            
    <record id="action_bus_fee" model="ir.actions.act_window">
        <field name="name">Bus City</field>
        <field name="res_model">mc.bus.city</field>
        <field name="view_mode">list,form</field>
    </record>



    <menuitem id="menu_bus_fee"
            name="Bus City" 
            parent="menu_application_admission_setup"
            action="action_bus_fee"/>

    <menuitem id="menu_bus_fee_from_fee"
            name="Bus Cities Fees" 
            parent="education_fee.education_fee_structure_menu_root"
            sequence="5"
            action="action_bus_fee"/>


    


</odoo>
