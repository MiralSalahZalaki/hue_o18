<odoo>
    <record id="education_fee_discount_config_category_list_view" model="ir.ui.view">
        <field name="name">education.fee.discount.config.category.list</field>
        <field name="model">education.fee.discount.config.category</field>
        <field name="arch" type="xml">
            <list string="Discount Categories">
                <field name="name"/>
            </list>
        </field>
    </record>


    <record id="education_fee_discount_config_category_form_view" model="ir.ui.view">
        <field name="name">education.fee.discount.config.category.form</field>
        <field name="model">education.fee.discount.config.category</field>
        <field name="arch" type="xml">
            <form string="Discount Categories">
               <group>
                    <field name="name"/>
                    <field name="by_term"/>
                    <field name="choose_term" invisible="not by_term"  required="by_term"/>
               </group>
            </form>
        </field>
    </record>

            
    <record id="action_education_fee_discount_config_category" model="ir.actions.act_window">
        <field name="name">Discount Categories</field>
        <field name="res_model">education.fee.discount.config.category</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_education_fee_discount_config_category"
            name="Discount Categories" 
            parent="discount_config_menu"
            action="action_education_fee_discount_config_category"
            sequence="2"
            />


</odoo>
