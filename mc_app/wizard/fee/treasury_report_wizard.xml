<odoo>
    <data>
        <!-- Form View for Treasury Report Wizard -->
        <record id="treasury_report_wizard_form_view" model="ir.ui.view">
            <field name="name">treasury.report.wizard.form</field>
            <field name="model">treasury.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Treasury Report">
                    <!-- Header with main filters -->
                    <group col="4">
                        <field name="employee_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                    </group>

                    <!-- Filters for Fee and Journal -->
                    <group>
                        <group>
                            <field name="fee_category_id" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                            <field name="account_journal" widget="many2many_checkboxes" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="fee_payment_term" options="{'no_quick_create': True, 'no_create_edit': True}"/>
                        </group>
                    </group>

                    <!-- Date Range Selection -->
                    <group>
                        <group>
                            <field name="date_from" string="Date from" widget="date" required="True"/>
                        </group>
                        <group>
                            <field name="date_to" string="Date to" widget="date" required="True"/>
                        </group>
                    </group>

                    <group col="4">
                        <field name="financial_year" options="{'no_create': True}"/>
                    </group>
                    <!-- Footer with Action Buttons -->
                    <footer>
                        <button name="generate_treasury_report_wizard" 
                                type="object" 
                                string="Generate Report" 
                                class="btn-primary" 
                                default_focus="1"/>
                        <button string="Cancel" 
                                class="btn-secondary" 
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for Treasury Report Wizard -->
        <record id="action_treasury_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Treasury Report</field>
            <field name="res_model">treasury.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="treasury_report_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <!-- Menu Item for Treasury Report Wizard -->
        <menuitem id="treasury_report_wizard_menu"
                  name="Treasury Report"
                  parent="fee_reports_menu"
                  action="action_treasury_report_wizard"
                  sequence="1"/>
    </data>
</odoo>