<odoo>
    <data>
        <record id="student_12d_wizard_form_view" model="ir.ui.view">
            <field name="name">student.12d.wizard.form</field>
            <field name="model">student.12d.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Student 12D Report" >
                    <group>
                        <field name="report_view" required="1"/>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" can_create="false" can_write="false" />
                        <field name="title" />
                    </group>
                    <group>
                        <group>
                            <field name="display_name" required="1"/>
                        </group>
                        <group>
                            <field name="student_status" required="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="grade_id" />
                            <field name="code" />
                            <field name="first_name" />
                            <field name="birth_date" />
                            <field name="order_by" />
                            <field name="new_report" />
                        </group>
                        <group>
                            <field name="class_division_id" />
                            <field name="full_name" />
                            <field name="surname" />
                            <field name="gender" />
                          
                        </group>
                    </group>

                   
                    <footer >
                        <button name="action_generate_12d_report" type="object"   
                                string="Search" default_focus="1" class="oe_highlight" />
                                or 
                                
                        <button string="Cancel" class="oe_link" special="cancel" />

                    </footer>
                </form>
            </field>
        </record>



        
        <record id="action_student_12d_wizard" model="ir.actions.act_window">
            <field name="name">Generate Student 12D Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.12d.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="student_12d_wizard_form_view"/>
            <field name="target">new</field>
        </record>

            <!-- Student Date  menu -->
        <menuitem   id="student_12d_report_menu" name="Student 12D Report"
                    parent="mc_app.ministry_reports_menu"
                    action="action_student_12d_wizard"
                    sequence = "2"/>


    </data>
</odoo>
