<odoo>
    <data>
        <record id="student_hostory_wizard_form_view" model="ir.ui.view">
            <field name="name">student.history.wizard.form</field>
            <field name="model">student.history.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Student History Report" >
                    <group>
                        <field name="quit_student" required="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="report_view" required="1"/>
                            <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" can_create="false" can_write="false" />
                            <field name="student_code"/>
                        </group>
                        
                        <group>
                           <field name="grade_id"/>
                           <field name="class_division_id"/>
                           <field name="student_id"/>
                        </group>
                    </group>

                    <footer >
                        <button name="generate_student_histroy_report" type="object"   
                                string="Search" default_focus="1" class="oe_highlight" />
                                or                                 
                        <button string="Cancel" class="oe_link" special="cancel" />

                    </footer>
                </form>
            </field>
        </record>



        
        <record id="action_student_history_wizard" model="ir.actions.act_window">
            <field name="name">Generate Student Class History Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.history.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="student_hostory_wizard_form_view"/>
            <field name="target">new</field>
        </record>

            <!-- Student Date  menu -->
        <menuitem   id="student_history_report_menu" name="Student Class History"
                    parent="mc_app.ministry_reports_menu"
                    action="action_student_history_wizard"
                    sequence = "4"/>


    </data>
</odoo>
