<odoo>
    <!-- Tree View -->
    <record id="mc_custom_distribution_tree_view" model="ir.ui.view">
        <field name="name">mc.custom.distribution.tree</field>
        <field name="model">mc.custom.distribution</field>
        <field name="arch" type="xml">
            <list>
                <field name="item"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_custom_distribution_form_view" model="ir.ui.view">
        <field name="name">mc.custom.distribution.form</field>
        <field name="model">mc.custom.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Custom Distribution Template">
                  <group>
                     <group>
                        <field name="item" domain="[('company_id', 'in', allowed_company_ids)]" />
                        <field name="minimum"/>
                        <field name="report_mark"/>
                        <field name="best_of"/>
                    </group>
                     <group>
                        <field name="maximum"/>
                        <field name="weight"/>
                        <field name="control"/>
                    </group>
                  </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mc_custom_distribution" model="ir.actions.act_window">
        <field name="name">Custom Distribution Template</field>
        <field name="res_model">mc.custom.distribution</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mc_custom_distribution"
              name="Custom Distribution Template" 
              parent="menu_grading_setup"
              sequence = "5"
              action="action_mc_custom_distribution"/>
</odoo>