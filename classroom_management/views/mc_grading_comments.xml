<odoo>
    <data>
        <record id="mc_grading_comments_tree_view" model="ir.ui.view">
            <field name="name">mc_grading_comments_tree_view</field>
            <field name="model">mc.grading.comments</field>
            <field name="arch" type="xml">
            <list string="Grading Comments">
                <field name="name"/>
            </list>
            </field>
        </record>


         <record id="mc_grading_comments_form_view" model="ir.ui.view">
            <field name="name">mc_grading_comments_form_view</field>
            <field name="model">mc.grading.comments</field>
            <field name="arch" type="xml">
            <form>
                <sheet string="Grading Comments">
                    <group>
                        <field name="name" required="1"/>
                        <field name="grading_type_id" required="1"/>
                    </group>    
                </sheet>
            </form>
            </field>
        </record>



        
        <record id="action_mc_grading_comments" model="ir.actions.act_window">
            <field name="name">Grading Comments</field>
            <field name="res_model">mc.grading.comments</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>

        </record>



        <menuitem id="menu_mc_grading_comments"
                name="Grading Comments" 
                parent="menu_student_grading"
                action="action_mc_grading_comments"
                sequence="5"
                />

    </data>
</odoo>
