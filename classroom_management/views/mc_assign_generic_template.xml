<odoo>
    <!-- Tree View -->
    <record id="mc_assign_generic_template_tree_view" model="ir.ui.view">
        <field name="name">mc.assign.generic.template.tree</field>
        <field name="model">mc.assign.generic.template</field>
        <field name="arch" type="xml">
            <list>
                <field name="temp_id"/>
                <field name="grade_ids"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_assign_generic_template_form_view" model="ir.ui.view">
        <field name="name">mc.assign.generic.template.form</field>
        <field name="model">mc.assign.generic.template</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="add_syllabus" type="object" string="Add Syllabus" class="btn btn-primary"/>
                </header>
                <sheet string="Assign Generic Template">
                    <group>
                        <field name="temp_id"/>
                        <field name="grade_ids" domain="[('school', 'in', allowed_company_ids)]" widget="many2many_tags"/>

                    </group>  

                    <notebook invisible="not grade_ids">
                        <page string="Syllabus Assign Generic Template">

                            <field name="syllabus_assign_templat_id"  widget="one2many" mode="list,form">
                                <list editable="bottom" string="Grade Distribution Template">
                                    <field name="syllabus_id"  domain="[('class_id', 'in', parent.grade_ids)]"/>
                                    <field name="grade_id"/>
                                </list>
                            </field>
                        </page> 
                    </notebook>  
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mc_assign_generic_template" model="ir.actions.act_window">
        <field name="name">Assign Generic Template</field>
        <field name="res_model">mc.assign.generic.template</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mc_assign_generic_template"
              name="Assign Generic Template" 
              parent="menu_grading_setup"
              sequence = "7"
              action="action_mc_assign_generic_template"/>
</odoo>