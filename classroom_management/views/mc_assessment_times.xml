<odoo>
    <!-- Tree View -->
    <record id="mc_assessment_times_tree_view" model="ir.ui.view">
        <field name="name">mc.assessment.times.tree</field>
        <field name="model">mc.assessment.times</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="grade_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_assessment_times_form_view" model="ir.ui.view">
        <field name="name">mc.assessment.times.form</field>
        <field name="model">mc.assessment.times</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Assessments times">
                    <group>
                        <field name="active" invisible="1"/>
                        <field name="name"/>
                        <field name="start_date" placeholder="Set the start date"/>
                        <field name="end_date" placeholder="Set the end date"/>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" options="{'no_create': True}" widget="selection"/>
                    </group>    
                        <newline/>
                    <group>
                        <field name="grade_ids"  widget="many2many_tags" colspan="4" />
                    </group>
                        <newline/>
                    <group>
                        <field name="distribution"/>
                        <field name="publish"/>
                        <field name="stored"/>
                    </group>
                        
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="mc_action_mc_assessment_times" model="ir.actions.act_window">
        <field name="name">Assessments-Adding Times</field>
        <field name="res_model">mc.assessment.times</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>

    </record>

    <!-- Menu -->
    <menuitem id="mc_menu_mc_assessment_times"
              name="Assessments-Adding Times" 
              parent="menu_grading_setup"
              sequence = "9"
              action="mc_action_mc_assessment_times"/>
</odoo>