<odoo>
    <data>
        <record id="mc_follow_supervisor_tree_view" model="ir.ui.view">
            <field name="name">mc_follow_supervisor_tree_view</field>
            <field name="model">mc.follow.supervisor</field>
             <field name="arch" type="xml">
            <list string="Manage Follow Supervisor" >
                <field name="responsible"/>
                <field name="grade_id"  widget="many2many_tags" />
                <field name="syllabus_id"  widget="many2many_tags"/>
            </list>
            </field>
        </record>


            <record id="mc_follow_supervisor_form_view" model="ir.ui.view">
            <field name="name">mc_follow_supervisor_form_view</field>
            <field name="model">mc.follow.supervisor</field>
             <field name="arch" type="xml">
                <form string="Manage Follow Supervisor">
                    <sheet>
                        <group> 
                            <field name="responsible" domain="[('company_id','in', allowed_company_ids)]"/>
                            <field name="grade_id" widget="many2many_tags" />
                            <field name="syllabus_id" widget="many2many_tags" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        
        <record id="action_mc_follow_supervisor" model="ir.actions.act_window">
            <field name="name">Manage Follow Supervisor</field>
            <field name="res_model">mc.follow.supervisor</field>
            <field name="view_mode">list,form</field>

        </record>



        <menuitem id="menu_mc_follow_supervisor"
                name="Manage Follow Supervisor" 
                parent="menu_follow_up_sheet"
                action="action_mc_follow_supervisor"
                sequence="4"
                />

    </data>
</odoo>
