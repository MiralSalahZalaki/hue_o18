<odoo>
    <!-- Tree View -->
    <record id="total_student_result_tree_view" model="ir.ui.view">
        <field name="name">total.student.result.tree</field>
        <field name="model">total.student.result</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="total_student_result_form_view" model="ir.ui.view">
        <field name="name">total.student.result.form</field>
        <field name="model">total.student.result</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_id"/>
                        <field name="academic_year_id"/>
                        <field name="grade_id"/>
                        <field name="result" placeholder="Type here the result" readonly="1"/>
                        <field name="total"/>
                        <field name="absence_days"/>
                    </group>
                    <group>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]"/>
                        <field name="term_id"/>
                        <field name="class_id"/>
                        <field name="ministry_total"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="mc_action_total_student_result" model="ir.actions.act_window">
        <field name="name">Total Student Result</field>
        <field name="res_model">total.student.result</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="mc_menu_total_student_result"
              name="Total Student Result" 
              parent="menu_grading_setup"
              sequence = "2"
              action="mc_action_total_student_result"/>
</odoo>