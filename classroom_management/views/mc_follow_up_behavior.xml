<odoo>
    <data>
        <record id="mc_follow_up_behavior_tree_view" model="ir.ui.view">
            <field name="name">mc_follow_up_behavior_tree_view</field>
            <field name="model">mc.follow.up.behavior</field>
            <field name="arch" type="xml">
            <list string="Behavioral Follow-Up">
                <field name="syllabus_id"/>
                <field name="class_id"/>
                <field name="grade_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
            </field>
        </record>

        <record id="mc_follow_up_behavior_form_view" model="ir.ui.view">
            <field name="name">mc_follow_up_behavior_form_view</field>
            <field name="model">mc.follow.up.behavior</field>
            <field name="arch" type="xml">
            <form>
                <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" required="1"/>
                        <button name="set_done" type="object" class="btn btn-primary" string="Set to Done" invisible="state == 'done'"/>
                        <button name="set_draft" type="object" class="btn btn-primary" string="Set to Draft" invisible="state == 'draft' or check_student == False"/>
                        <button name="get_students_list" type="object"  string="Get Students"/>
                </header>
                <sheet string="Behavioral Follow-Up">
                    <group>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" options="{'no_create': True}" widget="selection" required="1"/>
                        <field name="grade_id" required="1"/>
                        <field name="syllabus_id" />
                        <field name="class_id" />
                        <field name="date" required="1"/>
                        <field name="follow_up_time"/>
                        <field name="situation"/>
                    
                    
                        <button name="fill_situation"
                                string="Fill Max Situation"
                                class="oe_highlight"
                                type="object"
                                invisible="state == 'done'"
                                readonly="state == 'done'"/>
                    </group>
                    

                    
                   <notebook>
                            <page string="Student List">
                                <field name="student_list" widget="one2many" mode="list,form">
                                    <list string="Student List" create="false">
                                        <field name="student_id"/>
                                        <field name="class_id"/>
                                        <field name="situation"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                    </notebook>
                </sheet>
                <chatter/>

            </form>
            </field>
        </record>



        
        <record id="action_mc_follow_up_behavior" model="ir.actions.act_window">
            <field name="name">Behavioral Follow-Up</field>
            <field name="res_model">mc.follow.up.behavior</field>
            <field name="view_mode">list,form</field>
        </record>



        <menuitem id="menu_mc_follow_up_behavior"
                name="Behavioral Follow-Up" 
                parent="menu_follow_up_sheet"
                action="action_mc_follow_up_behavior"
                sequence="2"
                />

    </data>
</odoo>
