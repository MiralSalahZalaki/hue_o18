<odoo>
    <!-- Tree View -->
    <record id="mc_publish_assessment_confg_tree_view" model="ir.ui.view">
        <field name="name">mc.publish.assessment.confg.tree</field>
        <field name="model">mc.publish.assessment.confg</field>
        <field name="arch" type="xml">
            <list>
                <field name="company_id"/>
                <field name="academic_year_id"/>
                <field name="term_id"/>
                <field name="grade_id"/>
                <field name="assessments_times"/>
                <field name="second_assessments_times"/>
                <field name="publish"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_publish_assessment_confg_form_view" model="ir.ui.view">
        <field name="name">mc.publish.assessment.confg.form</field>
        <field name="model">mc.publish.assessment.confg</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Assessment Publish Configration">
                    <group>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" options="{'no_create': True}" widget="selection"/>
                        <field name="academic_year_id"/>
                        <field name="term_id"/>
                        <field name="grade_id"/>
                        <field name="assessments_times"/>
                        <field name="second_assessments_times"/>
                        <field name="publish"/>                  
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mc_publish_assessment_confg" model="ir.actions.act_window">
        <field name="name">Assessment Publish Configration</field>
        <field name="res_model">mc.publish.assessment.confg</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_mc_publish_assessment_confg"
              name="Assessment Publish Configration" 
              parent="menu_grading_config"
              sequence = "4"
              action="action_mc_publish_assessment_confg"/>
</odoo>