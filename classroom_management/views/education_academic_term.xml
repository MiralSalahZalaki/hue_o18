<odoo>
    <data>
        <record id="education_academic_term_tree_view" model="ir.ui.view">
            <field name="name">education_academic_term_tree_view</field>
            <field name="model">education.academic.term</field>
            <field name="arch" type="xml">
            <list string="Academic Terms" >
                <field name="name"/>
                <field name="arabic_name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="academic_year_id"/>
                <field name="active_term"/>
                <field name="kpi_publish"/>
                <field name="publish"/>
            </list>
            </field>
        </record>

         <record id="education_academic_term_form_view" model="ir.ui.view">
            <field name="name">education_academic_term_form_view</field>
            <field name="model">education.academic.term</field>
            <field name="arch" type="xml">
            <form string="Academic Terms" >
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="arabic_name"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="academic_year_id"/>
                        <field name="active_term"/>
                        <field name="kpi_publish"/>
                        <field name="publish"/>
                    </group>
                </sheet>
            </form>
            </field>
        </record>




        
        <record id="action_education_academic_term" model="ir.actions.act_window">
            <field name="name">Academic Terms</field>
            <field name="res_model">education.academic.term</field>
            <field name="view_mode">list,form</field>

        </record>



        <menuitem id="menu_education_academic_term"
                name="Academic Term" 
                parent="menu_grading_setup"
                action="action_education_academic_term"
                sequence="10"
                />

    </data>
</odoo>
