<odoo>
    <!-- List View -->
    <record id="education_school_year_list_view" model="ir.ui.view">
        <field name="name">education.school.year.list</field>
        <field name="model">education.school.year</field>
        <field name="arch" type="xml">
            <list string="School Years">
                <field name="name"/>
                <field name="school_year"/>
                <field name="ay_start_date"/>
                <field name="ay_end_date"/>
                <field name="ay_description"/>
                <field name="active"/>
                <field name="current"/>
                <field name="company_id"/>
                <field name="term_ids"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="education_school_year_form_view" model="ir.ui.view">
        <field name="name">education.school.year.form</field>
        <field name="model">education.school.year</field>
        <field name="arch" type="xml">
            <form string="School Years">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="school_year"/>
                        <field name="ay_start_date"/>
                        <field name="ay_end_date"/>
                        <field name="ay_description"/>
                        <field name="active"/>
                        <field name="current"/>
                        <field name="company_id"/>
                    </group>

                    	<notebook>
                            <page string="Academic Terms">
                                <group>
                                    <field name="term_ids" nolabel="1" mode="list" />
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_education_school_year" model="ir.actions.act_window">
        <field name="name">School Years</field>
        <field name="res_model">education.school.year</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_education_school_year"
              name="School Years"
              parent="mc_app.menu_application_class_setup"
              sequence="1"
              action="action_education_school_year"/>
</odoo>
