<odoo>
    <data>
        <record id="mc_grading_supervisor_tree_view" model="ir.ui.view">
            <field name="name">mc_grading_supervisor_tree_view</field>
            <field name="model">mc.grading.supervisor</field>
             <field name="arch" type="xml">
            <list string="Manage Grading Supervisor" >
                <field name="responsible"/>
                <field name="educational_stage"  widget="many2many_tags"/>
                <field name="grade_id"  widget="many2many_tags" />
                <field name="syllabus_id"  widget="many2many_tags"/>
            </list>
            </field>
        </record>


            <record id="mc_grading_supervisor_form_view" model="ir.ui.view">
            <field name="name">mc_grading_supervisor_form_view</field>
            <field name="model">mc.grading.supervisor</field>
             <field name="arch" type="xml">
                <form string="Manage Grading Supervisor">
                    <sheet>
                        <group> 
                            <field name="responsible" domain="[('company_id','in', allowed_company_ids)]"/>
                            <field name="educational_stage" widget="many2many_tags" domain="[('company_id','in', allowed_company_ids)]" />
                            <field name="grade_id" widget="many2many_tags" />
                            <field name="syllabus_id" widget="many2many_tags" />
                        </group>

                    </sheet>
                </form>
            </field>
        </record>


        
        <record id="action_mc_grading_supervisor" model="ir.actions.act_window">
            <field name="name">Manage Grading Supervisor</field>
            <field name="res_model">mc.grading.supervisor</field>
            <field name="view_mode">list,form</field>

        </record>



        <menuitem id="menu_mc_grading_supervisor"
                name="Manage Supervisor" 
                parent="menu_elevation_supervisor_config"
                action="action_mc_grading_supervisor"
                sequence="1"
                />

    </data>
</odoo>
