<odoo>
    <!-- Tree View -->
    <record id="mc_assessments_category_tree_view" model="ir.ui.view">
        <field name="name">mc.assessments.category.tree</field>
        <field name="model">mc.assessments.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="item"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_assessments_category_form_view" model="ir.ui.view">
        <field name="name">mc.assessments.category.form</field>
        <field name="model">mc.assessments.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Assessments Category">
                    <group>
                        <field name="item"/>
                        <field name="max_score"/>
                        <field name="weight"/>
                        <field name="best_of"/>
                        <field name="control"/>
                        <field name="assessments_category_grading_method_id"/>
                    </group>
                        
                </sheet>
            </form>
        </field>
    </record>

