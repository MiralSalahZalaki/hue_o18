<odoo>
    <!-- Tree View -->
    <record id="mc_grade_distribution_tree_view" model="ir.ui.view">
        <field name="name">mc.grade.distribution.tree</field>
        <field name="model">mc.grade.distribution</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="assessment"/>
                <field name="control"/>
                <field name="company_id"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="mc_grade_distribution_form_view" model="ir.ui.view">
        <field name="name">mc.grade.distribution.form</field>
        <field name="model">mc.grade.distribution</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="Grade Distribution">
                    <group>
                        <field name="name"/>
                        <field name="assessment"/>
                        <field name="control"/>
                        <field name="company_id" domain="[('id', 'in', allowed_company_ids)]" options="{'no_create': True}" widget="selection"/>
                    </group>    
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_mc_grade_distribution" model="ir.actions.act_window">
        <field name="name">Grade Distribution</field>
        <field name="res_model">mc.grade.distribution</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>

    </record>

    <!-- Menu -->
    <menuitem id="menu_mc_grade_distribution"
              name="Grade Distribution" 
              parent="menu_grading_config"
              sequence = "1"
              action="action_mc_grade_distribution"/>
</odoo>