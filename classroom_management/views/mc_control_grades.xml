<odoo>
    <data>
        <record id="mc_control_grades_tree_view" model="ir.ui.view">
            <field name="name">mc_control_grades_tree_view</field>
            <field name="model">mc.control.grades</field>
             <field name="arch" type="xml">
            <list string="Control Grades" >
                <field name="syllabus_id"/>
                <field name="grade_id"/>
                <field name="date" />
                <field name="distribution_id"/>
                <field name="state"/>
            </list>
            </field>
        </record>


            <record id="mc_control_grades_form_view" model="ir.ui.view">
            <field name="name">mc_control_grades_form_view</field>
            <field name="model">mc.control.grades</field>
             <field name="arch" type="xml">
                <form string="Control Grades">
                    <header>
                        <button name="set_done" string="Set to Done" class="oe_highlight" type="object" 
                                invisible="state == 'done'" />
                    
                        <button name="set_draft" string="set to draft" class="oe_highlight" type="object" 
                                invisible="state == 'draft'"/>
                        
                        <button name="get_students_list" type="object" 
                                invisible="state != 'draft'" string="Get Students" help="Click to get student list" />
                        <field name="state" widget="statusbar" statusbar_visible="draft,done" required="1"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="company_id" domain="[('id', 'in', allowed_company_ids)]"  options="{'no_create': True, 'no_create_edit':True,'no_open': True}" readonly = "state == 'done'"/>
                                <field name="grade_id" domain="grade_domain" options="{'no_create': True, 'no_create_edit':True,'no_open': True}" readonly = "state == 'done'" />
                                <field name="syllabus_grade" readonly="1" />
                            </group>
                            <group>
                                <field name="term_id" options="{'no_create': True, 'no_create_edit':True,'no_open': True}" readonly = "state == 'done'"/>
                                <field name="syllabus_id" domain="syllabus_domain" options="{'no_create': True, 'no_create_edit':True,'no_open': True}" readonly = "state == 'done'" />
                            </group>
                        </group>
                        <group class="w-50 mt-4"> 
                            <field name="check_student" invisible="1" />
                            <field  name="distribution_id" 
                                    options="{'no_create': True, 'no_create_edit':True,'no_open': True}" 
                                    domain="distribution_domain"
                                    readonly = "state == 'done'" />
                            <field name="date" readonly = "state == 'done'"   />
                            <field name="another_max_score" string="Max Score" invisible="1" />
                            <field name="custom_max_score" readonly = "state == 'done'" required="1"/>
                            <button name="fill_score" string="Fill Max Score" class="oe_highlight" type="object" invisible = "state == 'done' or not student_list" />
                        </group>

                         <notebook>
                            <page string="Student List">
                                <field name="student_list" readonly = "state == 'done'" options="{'no_open': True}"   widget="one2many" mode="list,form">
                                    <list string="Student List" create="false"  editable="bottom">
                                        <field name="check" />
                                        <field name="seat_number" readonly="1"/>
                                        <field name="student_code" readonly="1"/>
                                        <field name="student_id" readonly="1"/>
                                        <field name="class_division_id" readonly="1"/>
                                        <field name="score" />
                                        <field name="comment" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    
                    <chatter/>

                </form>
            </field>
        </record>


        
        <record id="action_mc_control_grades" model="ir.actions.act_window">
            <field name="name">Add Control Grades</field>
            <field name="res_model">mc.control.grades</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('company_id', 'in', allowed_company_ids)]</field>

        </record>



        <menuitem id="menu_mc_control_grades"
                name="Add Control Grades" 
                parent="menu_student_grading"
                action="action_mc_control_grades"
                sequence="2"
                />

    </data>
</odoo>
