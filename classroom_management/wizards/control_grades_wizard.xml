<odoo>
    <data>
        <record id="control_grades_wizard_form_view" model="ir.ui.view">
            <field name="name">control.grades.wizard.form</field>
            <field name="model">control.grades.wizard</field>
            <field name="arch" type="xml">
                <form string="Control Grades wizard" >
                    <group>
                            <field name="company_id" domain="[('id', 'in', allowed_company_ids)]"   options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  required="1"/>
                            <field name="term_id" required="1"    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  />
                            <field name="grade_id" required="1"    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  />
                            <field name="distribution"    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  />
                            <field name="class_id"    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  />
                            <field name="assessments_times"
                                    domain ="assessment_times_domain"
                                    options="{'no_quick_create':True,'no_create_edit':True,'no_open': True}"  />         
                    </group>

                    <footer >
                        <button name="generate_control_grades_report_wizard" type="object"   
                                string="View" default_focus="1" class="oe_highlight" />
                                or 

                        <button string="Cancel" class="oe_link" special="cancel" />

                    </footer>
                </form>
            </field>
        </record>


        
        <record id="action_control_grades_wizard" model="ir.actions.act_window">
            <field name="name">Control Grades</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">control.grades.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="control_grades_wizard_form_view"/>
            <field name="target">new</field>
        </record>


        <menuitem   id="control_grades_wizard_report_menu" 
                    name="Control Grading"
                    parent="menu_grading_reports"
                    action="action_control_grades_wizard"
                    sequence = "3"/>


    </data>
</odoo>
