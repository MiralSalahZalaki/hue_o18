<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="assessments_report_template">
    <t t-set="data_report_landscape" t-value="True"/>
    <t t-set="full_width" t-value="True"/>
    <t t-call="web.html_container">
      <head>
        <meta charset="UTF-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <link rel="preconnect" href="https://fonts.googleapis.com"/>
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&amp;display=swap" rel="stylesheet"/>
        <style>
            body {
                font-size:12px !important;
            }
          .assessments-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 14px;
          }
          .assessments-table th,
          .assessments-table td {
            border: 1px solid #000;
            padding: 6px;
            text-align: center;
            vertical-align: middle;
          }
          .assessments-table th {
            background-color: #e9ecef;
            font-weight: bold;
          }
          .count-cell {
            font-weight: bold;
            color: #155724;
            min-width: 40px;
            height: 40px;
            padding: 0;
          }
          .subject-header {
            background-color: #d1ecf1;
            font-weight: bold;
          }
          .class-number {
            background-color: #f8f9fa;
            font-weight: bold;
          }
          .category-header {
            background-color: #fff3cd;
            text-orientation: mixed;
            min-width: 30px;
          }
        </style>
      </head>
      <div class="page">
        <div class="my-3">
          <button class="print-button" style="background: #2c3691; color: #fff; border-radius:4px; border:none" onclick="window.print();">
            <i class="fa fa-print"/> Print
          </button>
        </div>
        <div class="container mt-5">
          <!-- Report Header -->
          <div class="row mb-4">
            <div class="d-flex align-items-center align-items-sm-start border-bottom border-2 border-dark">
              <div class="col-6 text-start">
                <h2>Assessments Report</h2>
                <h5>
                  <t t-esc="company"/>
                </h5>
                <div>
                  <strong>Grade :</strong>
                  <t t-esc="grade_name"/>
                </div>
                <t t-if="not distribution">
                  <div>
                    <strong>Assessments Times :</strong>
                    <t t-esc="assessments_times"/>
                  </div>
                </t>
                <t t-if="distribution">
                  <div>
                    <strong>Term :</strong>
                    <t t-esc="term_name"/>
                  </div>
                </t>
              </div>
              <div class="col-6" style="display: flex; justify-content: end;">
                <img src="/mc_app/static/description/mclogo.png" style="width: 250px;" />
              </div>
            </div>
          </div>
          <!-- Assessments Table -->
          <div class="row">
            <div class="col-12">
              <table class="assessments-table">
                <thead>
                  <!-- First header row - Subject names -->
                  <tr>
                    <th rowspan="2" style="width:30px !important">#</th>
                    <th rowspan="2" class="class-number">Class</th>
                    <t t-foreach="syllabi_list" t-as="subject">
                      <t t-set="categories_count" t-value="len(categories_list)"/>
                      <th t-att-colspan="categories_count" class="subject-header">
                        <t t-esc="subject"/>
                      </th>
                    </t>
                  </tr>
                  <!-- Second header row - Category names -->
                  <tr>
                    <t t-foreach="syllabi_list" t-as="subject">
                      <t t-foreach="categories_list" t-as="category">
                        <th class="category-header">
                          <t t-esc="category"/>
                        </th>
                      </t>
                    </t>
                  </tr>
                </thead>
                <tbody>
                  <t t-foreach="report_data" t-as="class_data">
                    <t t-set="row_index" t-value="class_data_index + 1"/>
                    <tr>
                      <td class="class-number">
                        <t t-esc="row_index"/>
                      </td>
                      <td class="class-number">
                        <t t-esc="class_data['class_name']"/>
                      </td>
                      <t t-foreach="syllabi_list" t-as="subject">
                        <t t-set="subject_data" t-value="class_data['subjects'].get(subject, {'categories': {}})"/>
                        <!-- Categories columns -->
                        <t t-foreach="categories_list" t-as="category">
                          <t t-set="category_dict" t-value="subject_data['categories'].get(category, {})"/>
                          <td class="count-cell">
                            <!-- Case 1: Both draft and done exist - split cell -->
                            <t t-if="category_dict.get('done', 0) > 0 and category_dict.get('draft', 0) > 0">
                              <div style="display: flex; height: 40px; width: 100%;">
                                <div style="flex: 1; background-color: #f8d7da; color: #721c24; display: flex; align-items: center; justify-content: center; border-right: 1px solid #000;">
                                  <t t-esc="category_dict.get('draft')"/>
                                </div>
                                <div style="flex: 1; background-color: #d4edda; color: #155724; display: flex; align-items: center; justify-content: center;">
                                  <t t-esc="category_dict.get('done')"/>
                                </div>
                              </div>
                            </t>
                            <!-- Case 2: Only done exists -->
                            <t t-if="category_dict.get('done', 0) > 0 and category_dict.get('draft', 0) == 0">
                              <div style="background-color: #d4edda; color: #155724; height: 40px; width: 100%; display: flex; align-items: center; justify-content: center;">
                                <t t-esc="category_dict.get('done')"/>
                              </div>
                            </t>
                            <!-- Case 3: Only draft exists -->
                            <t t-if="category_dict.get('draft', 0) > 0 and category_dict.get('done', 0) == 0">
                              <div style="background-color: #f8d7da; color: #721c24; height: 40px; width: 100%; display: flex; align-items: center; justify-content: center;">
                                <t t-esc="category_dict.get('draft')"/>
                              </div>
                            </t>
                            <!-- Case 4: No data -->
                            <t t-if="category_dict.get('done', 0) == 0 and category_dict.get('draft', 0) == 0">
                              <div style="color: #6c757d; height: 40px; width: 100%; display: flex; align-items: center; justify-content: center;">-</div>
                            </t>
                          </td>
                        </t>
                      </t>
                    </tr>
                  </t>
                </tbody>
              </table>
            </div>
          </div>
          <!-- Report Footer -->
          <div class="row mt-4">
            <div class="col-12 text-center text-muted">
              <small>Generated on:
                <t t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M:%S')"/>
              </small>
            </div>
          </div>
        </div>
      </div>
    </t>
  </template>
</odoo>